@model Domain.DTOs.Email.EmailChangeConfirmationModel 

<!DOCTYPE html>
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Change Confirmation</title>
</head>
<body style="margin: 0; padding: 0; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #f5f7fa;">
    <table cellpadding="0" cellspacing="0" border="0" width="100%" style="background-color: #f5f7fa; padding: 40px 20px;">
        <tr>
            <td align="center">
                <!-- Main Container -->
                <table cellpadding="0" cellspacing="0" border="0" width="600" style="max-width: 600px; background-color: #ffffff; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                    
                    <!-- Header with Gradient -->
                    <tr>
                        <td style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 50px 40px; text-align: center;">
                            <h1 style="margin: 0; color: #ffffff; font-size: 32px; font-weight: 700; letter-spacing: -0.5px;">
                                Itemite
                            </h1>
                            <p style="margin: 10px 0 0 0; color: rgba(255, 255, 255, 0.9); font-size: 16px;">
                                Email Change Request üìß
                            </p>
                        </td>
                    </tr>
                    
                    <!-- Content -->
                    <tr>
                        <td style="padding: 50px 40px;">
                            <h2 style="margin: 0 0 20px 0; color: #1a202c; font-size: 24px; font-weight: 600;">
                                Hello @Model.UserName! üëã
                            </h2>
                            
                            <p style="margin: 0 0 20px 0; color: #4a5568; font-size: 16px; line-height: 1.6;">
                                We received a request to change the email address for your Itemite account to:
                            </p>
                            
                            <div style="background-color: #f7fafc; border-radius: 8px; padding: 15px; margin-bottom: 20px;">
                                <p style="margin: 0; color: #667eea; font-size: 16px; font-weight: 600; text-align: center;">
                                    @Model.NewEmail
                                </p>
                            </div>
                            
                            <p style="margin: 0 0 30px 0; color: #4a5568; font-size: 16px; line-height: 1.6;">
                                To confirm this change and update your account email address, please click the button below:
                            </p>
                            
                            <!-- Button -->
                            <table cellpadding="0" cellspacing="0" border="0" width="100%">
                                <tr>
                                    <td align="center" style="padding: 10px 0 30px 0;">
                                        <a href="@Model.ConfirmationLink" 
                                           style="display: inline-block; 
                                                  padding: 16px 48px; 
                                                  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                                  color: #ffffff; 
                                                  text-decoration: none; 
                                                  border-radius: 50px; 
                                                  font-size: 16px; 
                                                  font-weight: 600;
                                                  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
                                                  transition: all 0.3s ease;">
                                            ‚úì Confirm Email Change
                                        </a>
                                    </td>
                                </tr>
                            </table>
                            
                            <div style="background-color: #f7fafc; border-radius: 8px; padding: 20px; margin-top: 20px;">
                                <p style="margin: 0 0 10px 0; color: #718096; font-size: 14px; font-weight: 600;">
                                    Button not working? Copy and paste this link:
                                </p>
                                <p style="margin: 0; word-break: break-all; color: #667eea; font-size: 13px; line-height: 1.5;">
                                    @Model.ConfirmationLink
                                </p>
                            </div>
                            
                            <div style="margin-top: 30px; padding-top: 30px; border-top: 1px solid #e2e8f0;">
                                <p style="margin: 0 0 15px 0; color: #4a5568; font-size: 14px; line-height: 1.6;">
                                    If you didn't request this email change, you can safely ignore this message. Your account email will remain unchanged.
                                </p>
                                <p style="margin: 0; color: #e53e3e; font-size: 13px; line-height: 1.6;">
                                    ‚ö†Ô∏è <strong>Security warning:</strong> If you didn't request this change, someone may have access to your account. We recommend changing your password immediately.
                                </p>
                            </div>
                            
                            <div style="margin-top: 20px;">
                                <p style="margin: 0; color: #a0aec0; font-size: 13px; line-height: 1.6;">
                                    üîí This link will expire in 24 hours for your security.
                                </p>
                            </div>
                        </td>
                    </tr>
                    
                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f7fafc; padding: 30px 40px; text-align: center; border-top: 1px solid #e2e8f0;">
                            <p style="margin: 0 0 10px 0; color: #718096; font-size: 14px;">
                                Need help? Contact us at <a href="mailto:itemite.app@gmail.com" style="color: #667eea; text-decoration: none;">itemite.app@gmail.com</a>
                            </p>
                            <p style="margin: 0; color: #a0aec0; font-size: 12px;">
                                &copy; 2025 Itemite. All rights reserved.
                            </p>
                            <div style="margin-top: 15px;">
                                <a href="https://mojo.generalmills.com/api/public/content/_pLFRXFETcuXWg_Z0MhZPw_gmi_hi_res_jpeg.jpeg?v=693b292b&t=466b54bb264e48b199fc8e83ef1136b4" style="color: #cbd5e0; text-decoration: none; margin: 0 10px; font-size: 12px;">Cookie Policy</a>
                                <span style="color: #e2e8f0;">|</span>
                                <a href="#" style="color: #cbd5e0; text-decoration: none; margin: 0 10px; font-size: 12px;">Terms of Service</a>
                            </div>
                        </td>
                    </tr>
                    
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
